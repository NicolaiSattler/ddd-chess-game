@using Chess.Domain.ValueObjects;
@page "/test/board"

<div class="board">

    @for (int i = 0; i < 8; i++)
    @for (int j = 0; j < 8; j++)
    {
        var colour = (j % 2) > 0
                   ? (i % 2) > 0
                        ?  BackgroundColour.Light : BackgroundColour.Dark
                   : (i % 2) == 1
                        ? BackgroundColour.Dark : BackgroundColour.Light;

        <FieldComponent Rank=i File=(File)j Colour=colour />
    }

</div>