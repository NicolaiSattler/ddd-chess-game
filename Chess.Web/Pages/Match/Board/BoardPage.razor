@using Chess.Domain.ValueObjects
@using Chess.Web.Components.Board
@using Chess.Web.Components.Piece
@using Chess.Web.Components.Status
@using Chess.Web.Components.Timeline

@page "/match/board/{AggregateId:guid}"

<MudGrid Class="px-5 pt-4 d-flex flex-wrap">
    <MudItem sm="12" md="8">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
            <BoardComponent AggregateId="AggregateId" OnTurnEnded="OnTurnResultAsync" />
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="4">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
            <StatusComponent Model="Status" />
        </MudPaper>

        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8 mt-2 overflow-auto" MaxHeight="50vh" >
            <TimelineComponent />
        </MudPaper>

        <MudButtonGroup Variant="Variant.Filled" Class="d-flex align-center justify-center mud-width-full mt-2 overflow-auto">
            <MudButton StartIcon="@Icons.Material.Filled.AlarmAdd">Test</MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.AlarmAdd">Test1</MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.AlarmAdd">Test2</MudButton>
        </MudButtonGroup>
    </MudItem>
</MudGrid>

